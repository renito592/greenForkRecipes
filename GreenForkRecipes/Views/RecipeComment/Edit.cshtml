@model GreenForkRecipes.ViewModels.RecipeComment.RecipeCommentEditVM

<h4>What do you think?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group form-check">
                <label class="form-check-label">
                    @if (!Model.Rating)
                    {
                        <input class="form-check-input" asp-for="Rating" /> @Html.DisplayNameFor(model => model.Rating)
                    }
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                @Html.TextAreaFor(m => m.Comment,5,200, new { @class = "form-control" })
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <input asp-for="RecipeId" type="hidden" value="@Model.RecipeId" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
